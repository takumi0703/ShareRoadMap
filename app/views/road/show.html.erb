<div class="container road-container">
    <div class="row">
        <div class="col-md-6">
            <h1 class="g-head">目標</h1>
            <% if @roads %>
                <%= @road.goal %>
                <% if @current_user == @user%>
                    <%= link_to( "編集する","/users/road/#{@road.id}",class:"user-edit-btn btn btn-primary" ) %>
                <% end %>
            <% else %>
                <h3 class="g-text">目標はまだ決めていません！</h3>
                <% if @current_user== @user%>
                    <%= link_to( "目標を決める!","/road/new",class:"user-edit-btn btn btn-primary r-btn") %>
                <% end %>
            <% end %>
        </div>
        <div class="col-md-6">
            <% if @studies.empty? %>
                <div class="not-r">
                    <h3>ロードマップは未作成です</h3>
                    <% if @current_user== @user%>
                        <%= link_to( "作成する","/study/new",class:"user-edit-btn btn btn-primary r-btn" ) %>
                    <% end %>
                </div>
            <% else %>
                <h2>ロードマップ</h2>
                <% @studies.each.with_index(1) do |study,i| %>
                    <p><%= i %></p> <br>
                    学習内容：<%= study.content  %> <br>
                    学習教材：<%= study.material %> <br>
                    学習教材：<%= study.period %> <br>
                    road_id：<%= study.user_id %> <br>
                    <% if @current_user== @user%>
                        <%= link_to( "編集する","/goal/#{study.id}/edit" ) %>
                    <% end %>
                    <br>
                <% end %>
                <%= link_to( "追加する","/study/new" ) %>
                <% end %>
            <br>
        </div>
    </div>
</div>