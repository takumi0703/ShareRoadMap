<!DOCTYPE html>
<html>
  <head>
    <title>ShareRoadMap</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if @current_user %>
        <div class="login-hd">
          <h2 class="logo">ShareRoadMap</h2>
            <ul class="nav justify-content-end">
                <li class="nav-item">
                  <%= link_to(@current_user.name, "/users/#{@current_user.id}",class:"nav-text") %>
                </li>
                <li class="nav-item">
                <%= link_to("ユーザー一覧", "/users/index",class:"nav-text") %>
                </li>
                <li class="nav-item">
                  <%= link_to("ログアウト", "/logout",class:"nav-text") %>
                </li>
            </ul>
        </div>
      <% else %>
      <div class="logout-hd">
        <h2 class="logo">ShareRoadMap</h2>
        <ul class="nav justify-content-end">
            <li class="nav-item">
              <%= link_to("新規登録", "/") %>
            </li>
            <li class="nav-item">
            <%= link_to("ログイン", "/login") %>
            </li>
        </ul>
      </div>
      <% end %>
    </header>
      <% if flash[:alert] %>
        <div class="alert">
          <% flash.each do |alert, message| %>
            <%= message %>
          <% end %>
        </div>
      <% end %>
      <% if flash[:success] %>
        <div class="success">
          <% flash.each do |success, message| %>
            <%= message %>
          <% end %>
        </div>
      <% end %>
    <%= yield %>
  </body>
</html>
