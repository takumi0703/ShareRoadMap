<div class="container">
  <div class="row user-show">
      <div class="card" style="width: 18rem;">
        <img src="<%= "/image/#{@user.image_icon}" %>" class="card-img-top" alt="ユーザーのアイコン画像">
        <div class="card-body">
        <h5 class="card-title"><%= @user.name %></h5>
        <% if @current_user== @user%>
          <%= link_to("編集する", "#{@user.id}/edit",class:"user-edit-btn btn btn-primary") %>        
        <% end %>
          <%= link_to("ロードマップをみる","/goal/#{@user.id}",class:"user-edit-btn btn btn-primary") %>
        </div>
      </div>
  </div>
</div>