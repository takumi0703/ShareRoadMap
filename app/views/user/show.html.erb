<div class="container">
  <div class="row user-show">
    <div class="col-md-6 ">
      <h1 class="g-title">目標</h1>
      <% if @user.goal %>
          <h2 class="g-text"><%= @user.goal %></h2>
      <% else %>
          <h3 class="g-text">目標はまだ決めていません！</h3>
      <% end %>
      <%= link_to("ロードマップをみる","/users/road/#{@user.id}",class:"user-edit-btn btn btn-primary") %>
    </div>
    <div class="col-md-6">
      <div class="card" style="width: 15rem;">
        <img src="<%= "/image/#{@user.image_icon}" %>" class="card-img-top" alt="ユーザーのアイコン画像">
        <div class="card-body">
          <h5 class="card-title"><%= @user.name %></h5>
          <% if @current_user== @user%>
            <%= link_to("編集する", "#{@user.id}/edit",class:"user-edit-btn btn btn-primary") %>        
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>