<div class="container">
  <div class="row user-show">
    <div class="col-md-6 ">
      <h1 class="g-title">目標</h1>
      <% if @user.goal.blank? %>
          <h3 class="g-text">目標はまだ決めていません！</h3>
      <% else %>
          <h2 class="g-text"><%= @user.goal %></h2>
      <% end %>
      <%= link_to("ロードマップをみる","/user/road/#{@user.id}",class:"user-edit-btn btn btn-primary") %>
    </div>
    <div class="col-md-6">
      <div class="user-content">
        <%if  @user.image_icon? %>
            <img src="<%= @user.image_icon.url %>" class="img-icon" alt="ユーザーアイコン">
          <% else %>
            <%= image_tag '/assets/default.jpeg' ,class:"img-icon", :alt => 'ユーザーアイコン' %>
        <% end %>
        <div class="user-text">
          <h5 class="user-name"><%= @user.name %></h5>
          <% if @current_user== @user%>
            <%= link_to("編集", edit_user_path(@user),class:"user-edit-btn btn btn-primary") %>  
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>