<div class="container">
    <div class="row">
        <%= form_with  url: "/study/create",class: "f-studies" do |form| %>
            <div class="f-study">
                <% @studies.errors.full_messages.each do |message| %>
                    <%= message %>
                <% end %>
                <div class="form-group">
                    <%= form.label :content ,'学習内容',:class => 'label-study'%>
                    <%= form.text_field :content,:value=>@studies.content, :placeholder => "学習する内容を記入しよう！"%>
                </div>
                <div class="form-group">
                    <%= form.label :material ,'学習教材',:class =>'label-study'%>
                    <%= form.text_field :material,:value=>@studies.material , :placeholder => "学習に使用する教材を決めよう！"%>
                </div>
                <div class="form-group">
                    <%= form.label :period ,'学習完了日' ,:class => 'label-study'%>
                    <%= form.date_field :period ,:value=>@studies.period%>
                </div>
                <div class="form-group">
                    <%= form.label :tag_list ,'タグ',:class => 'label-study'%>
                    <%= form.text_field :tag_list ,:value=> @studies.tag_list.join(',') , :placeholder => "複数の場合、カンマ区切りで入力してください" %>
                </div>
                <%= form.submit "作成" ,:class => 'study-btn'%>
            </div>
        <% end %>
    </div>
</div>
